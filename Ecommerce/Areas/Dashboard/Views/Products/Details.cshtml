@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">Image URL</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Image)</dd>

                <dt class="col-sm-3">Image Preview</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.Image))
                    {
                        <img src="@Model.Image" alt="Product Image" class="img-thumbnail" style="max-height: 200px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
                <a asp-area="Dashboard" asp-controller="Products" asp-action="Index"  class="btn btn-secondary">

                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-area="Dashboard" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>

        </div>
    </div>
</div>
