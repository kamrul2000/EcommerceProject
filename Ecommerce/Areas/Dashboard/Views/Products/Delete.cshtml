@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Delete Product</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this product?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Image)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                <a asp-area="Dashboard" asp-controller="Products" asp-action="Index"  class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
