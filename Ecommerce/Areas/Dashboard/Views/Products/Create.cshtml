@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="/Dashboard/Products/Create">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Name">Name</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input name="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input name="Price" class="form-control" type="number" step="0.01" />
            </div>
            <div class="form-group">
                <label for="Image">Image</label>
                <input name="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Dashboard/Products/Index" class="btn btn-secondary">Back to List</a>
</div>
