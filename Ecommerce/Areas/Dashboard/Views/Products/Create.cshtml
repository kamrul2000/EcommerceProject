@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Products" asp-area="Dashboard" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Name" class="form-label">Product Name</label>
                    <input type="text" name="Name" class="form-control" placeholder="Enter product name" required />
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea name="Description" class="form-control" rows="3" placeholder="Enter product description" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" name="Price" class="form-control" step="0.01" placeholder="0.00" required />
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Image URL</label>
                    <input type="file" name="Image" class="form-control" placeholder="Enter Product Image" required/>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-area="Dashboard" asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
