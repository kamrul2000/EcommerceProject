@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Current Image</label><br />
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="Product Image" width="120" class="img-thumbnail mb-2" />
                    }
                    else
                    {
                        <p class="text-muted">No image available.</p>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload New Image</label>
                    <input type="file" name="NewImage" class="form-control" />
                    <div class="form-text">Leave blank to keep existing image.</div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-area="Dashboard" asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
