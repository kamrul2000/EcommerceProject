@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <style>
        .gradient-custom-2 {
            background: #f5f7fa;
            background: -webkit-linear-gradient(to right, #f5f7fa, #c3cfe2);
            background: linear-gradient(to right, #f5f7fa, #c3cfe2);
        }


        
    </style>

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black shadow-lg">
                    <div class="row g-0">
                        <!-- Left Form Side -->
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/img/logo/e-sports.png" style="width: 185px;" alt="logo">

                                    <h4 class="mt-1 mb-4 pb-1">Create Your Account</h4>
                                </div>

                                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                    
                                    <div class="form-outline mb-3">
                                        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                    </div>


                                    <div class="form-outline mb-3">
                                        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="new-password" />
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn  btn-primary text-dark w-100 gradient-custom-2">Register</button>
                                    </div>
                                </form>

                                <div class="text-center pt-4">
                                    <small>
                                        Already have an account?
                                        <a asp-page="/Account/Login" class="text-decoration-none fw-semibold btn btn-outline-secondary">Login</a>
                                    </small>
                                </div>

                            </div>
                        </div>

                        <!-- Right Gradient Side -->
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-dark px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Welcome to E-Sports</h4>
                                <p class="small mb-0">
                                    "Be a part of the E-Sports community. From pro gear to beginner essentials, we have everything you need to fuel your gaming passion."
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
