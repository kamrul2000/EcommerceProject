@model List<Ecommerce.Models.Address>

@{
    ViewData["Title"] = "Shipping Address";
}

<h2>Select a Shipping Address</h2>

<div class="row">
    @foreach (var address in Model)
    {
        <div class="card mb-2 p-2">
            <p>@address.AddressLine</p>
            <p>@address.City, @address.State</p>

            <form method="post" asp-action="SelectAddress" asp-controller="Checkout">
                <input type="hidden" name="addressId" value="@address.Id" />
                <button type="submit" class="btn btn-primary">Use this address</button>
            </form>
        </div>
    }
</div>

<hr />

<h4>Add New Address</h4>
<form asp-action="SaveAddress" method="post">
    <div class="form-group">
        <label>Address Line</label>
        <input name="AddressLine" class="form-control" />
    </div>
    <div class="form-group">
        <label>City</label>
        <input name="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>State</label>
        <input name="State" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save Address</button>
</form>
