@model Ecommerce.ViewComponents.OrderSummaryViewModel

<div class="container mt-4">
    <h2 class="mb-4">Review Your Order</h2>

    <!-- Shipping Address -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Shipping Address</h5>
            <form method="post" asp-action="RemoveAddress" asp-controller="Checkout" class="m-0">
                <button type="submit" class="btn btn-outline-danger btn-sm">Remove Address</button>
            </form>
        </div>
        <div class="card-body">
            <p class="mb-0">
                @Model.Address.AddressLine<br />
                @Model.Address.City, @Model.Address.State
            </p>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Order Items</h5>
        </div>
        <div class="card-body">
            @foreach (var item in Model.OrderItems)
            {
                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>@item.Product.Name</strong>
                    </div>
                    <div class="col-md-3">
                        Quantity: @item.Quantity
                    </div>
                    <div class="col-md-3 text-end">
                        Price: $@item.UnitPrice
                    </div>
                </div>
                <hr />
            }
        </div>
    </div>

    <!-- Total and Go Order -->
    <div class="d-flex justify-content-between align-items-center">
        <h4>Total: $@Model.Total</h4>

        <div class="d-flex gap-2">
            <!-- Buttons grouped together -->
            <form method="post" asp-action="PayOnline" asp-controller="Checkout">
                <button type="submit" class="btn btn-outline-secondary">Make Payment</button>
            </form>
            <form method="post" asp-action="PlaceOrder" asp-controller="Checkout">
                <button type="submit" class="btn btn-outline-secondary">Go Order With Cash On Delivery</button>
            </form>
           
        </div>
    </div>

</div>
