@model Ecommerce.ViewComponents.OrderSummaryViewModel

<h2>Review Your Order</h2>

<h4>Shipping Address</h4>
<p>
    @Model.Address.AddressLine<br />
    @Model.Address.City, @Model.Address.State
</p>

<h4>Items</h4>
@foreach (var item in Model.OrderItems)
{
    <div>
        <strong>@item.Product.Name</strong> - Quantity: @item.Quantity - Price: $@item.UnitPrice
    </div>
}

<h4>Total: $@Model.Total</h4>

<form method="post" asp-action="PlaceOrder" asp-controller="Checkout">
    <button type="submit" class="btn btn-success mt-3">Go Order</button>
</form>
