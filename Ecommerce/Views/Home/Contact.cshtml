@{
    ViewData["Title"] = "Contact Us";
}

<section class="py-5" style="background-color: #f8f9fa;">
    <!-- light gray background -->
    <div class="container px-5">
        <!-- Contact form -->
        <div class="bg-white rounded-3 shadow-sm py-5 px-4 px-md-5 mb-5">
            <div class="text-center mb-5">
                <h1 class="fw-bolder">Get in Touch</h1>
                <p class="lead fw-normal text-muted mb-0">Have questions or want to join our e-sports community? Reach out!</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form id="contactForm" data-sb-form-api-token="API_TOKEN">
                        <!-- Name input -->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="name" type="text" placeholder="Enter your name..." data-sb-validations="required" />
                            <label for="name">Full Name</label>
                            <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                        </div>
                        <!-- Email input -->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" type="email" placeholder="name@example.com" data-sb-validations="required,email" />
                            <label for="email">Email Address</label>
                            <div class="invalid-feedback" data-sb-feedback="email:required">An email is required.</div>
                            <div class="invalid-feedback" data-sb-feedback="email:email">Email is not valid.</div>
                        </div>
                        <!-- Phone input -->
                        <div class="form-floating mb-3">
                            <input class="form-control" id="phone" type="tel" placeholder="(123) 456-7890" data-sb-validations="required" />
                            <label for="phone">Phone Number</label>
                            <div class="invalid-feedback" data-sb-feedback="phone:required">A phone number is required.</div>
                        </div>
                        <!-- Message input -->
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="message" placeholder="Enter your message..." style="height: 10rem" data-sb-validations="required"></textarea>
                            <label for="message">Message</label>
                            <div class="invalid-feedback" data-sb-feedback="message:required">A message is required.</div>
                        </div>
                        <!-- Submit button -->
                        <div class="d-grid">
                            <button class="btn btn-outline-dark btn-lg " id="submitButton" type="submit">
                                <i class="bi bi-send me-2"></i> Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Contact info cards -->
        <div class="row gx-5 row-cols-1 row-cols-sm-2 row-cols-lg-3 py-5 text-center">
            <div class="col mb-4">
                <div class="p-4 bg-white rounded-3 shadow-sm">
                    <i class="bi bi-geo-alt-fill fs-2 mb-2 text-secondary"></i>
                    <h5 class="fw-bolder mb-2">Our Address</h5>
                    <p class="text-muted mb-0">123 E-Sports Street, Dhaka, Bangladesh</p>
                </div>
            </div>
            <div class="col mb-4">
                <div class="p-4 bg-white rounded-3 shadow-sm">
                    <i class="bi bi-envelope-fill fs-2 mb-2 text-secondary"></i>
                    <h5 class="fw-bolder mb-2">Email Us</h5>
                    <p class="text-muted mb-0">support@esports.com</p>
                </div>
            </div>
            <div class="col mb-4">
                <div class="p-4 bg-white rounded-3 shadow-sm">
                    <i class="bi bi-telephone-fill fs-2 mb-2 text-secondary"></i>
                    <h5 class="fw-bolder mb-2">Call Us</h5>
                    <p class="text-muted mb-0">+880 1615-566169</p>
                </div>
            </div>
        </div>


        <!-- Contact buttons -->
        
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
