@{
    ViewData["Title"] = "About Us";
}

<!-- Mission Section -->
<section class="py-5 bg-light" id="about-mission">
    <div class="container px-5 my-5">
        <div class="text-center">
            <h1 class="fw-bolder mb-3">Building the Future of E-Sports Commerce</h1>
            <p class="lead fw-normal text-muted mb-4">
                We’re not just selling products—we’re creating a platform that powers the global e-sports industry.
                From exclusive gear to event partnerships, our mission is to connect players, fans, and brands in one trusted marketplace.
            </p>
            <a class="btn btn-outline-dark btn-lg" href="#founding">Explore Our Story</a>
        </div>
    </div>
</section>

<!-- Founding Section -->
<section class="py-5" id="founding">
    <div class="container px-5 my-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6">
                <img class="img-fluid rounded mb-5 mb-lg-0" src="https://dummyimage.com/600x400/212529/adb5bd&text=Startup+Launch" alt="Startup Launch" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bolder">Our Startup Journey</h2>
                <p class="lead text-muted mb-0">
                    We started as a small startup with one simple idea: bring premium e-sports products and services into one place.
                    What began with a handful of passionate entrepreneurs has grown into a business trusted by gamers, brands, and investors across the industry.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Growth Section -->
<section class="py-5 bg-light">
    <div class="container px-5 my-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6 order-first order-lg-last">
                <img class="img-fluid rounded mb-5 mb-lg-0" src="https://dummyimage.com/600x400/212529/adb5bd&text=Global+Growth" alt="Business Growth" />
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bolder">Scaling with Impact</h2>
                <p class="lead text-muted mb-0">
                    From early startup funding to global expansion, we’ve built a company that grows with the e-sports ecosystem.
                    Today, we work with international suppliers, sponsor tournaments, and help brands reach millions of gamers worldwide.
                    This is just the beginning of our growth story.
                </p>
            </div>
        </div>
    </div>
</section>

