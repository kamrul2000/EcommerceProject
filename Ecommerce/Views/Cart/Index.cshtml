@model List<Ecommerce.Models.Cart>

@{
    ViewData["Title"] = "Your Shopping Cart";
    decimal subtotal = 0;
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    h1, h5 {
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    }

    .card-body {
        padding: 2rem;
    }

    .cart-item img {
        border-radius: 10px;
        max-height: 120px;
        object-fit: cover;
    }

    .quantity-input {
        width: 50px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-outline-secondary {
        border-color: #999;
        color: #333;
        transition: all 0.2s ease;
    }

        .btn-outline-secondary:hover {
            background-color: #333;
            color: #fff;
        }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .btn-primary {
        background-color: #343a40;
        border-color: #343a40;
    }

        .btn-primary:hover {
            background-color: #212529;
        }

    .cart-summary .card-body {
        background: linear-gradient(to right, #f5f7fa, #c3cfe2);
        border-radius: 16px;
    }

    .input-group input {
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
    }

    .input-group button {
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    hr {
        border-top: 1px solid #ddd;
    }

    .text-muted {
        color: #666 !important;
    }


</style>

<div class="container py-5">
    <h1 class="mb-5">Your Shopping Cart</h1>
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">

                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            var totalPrice = item.Product.Price * item.Qty;
                            subtotal += totalPrice;
                            <div class="row cart-item mb-3">
                                <div class="col-md-3">
                                    <img src="@item.Product.Image" class="img-fluid rounded" />
                                </div>
                                <div class="col-md-5">
                                    <h5 class="card-title">@item.Product.Name</h5>
                                    @* <p class="text-muted">Category: @item.Product.Category</p> *@
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary btn-sm btn-decrease" type="button" data-id="@item.Id">−</button>
                                        <input type="text" class="form-control form-control-sm text-center quantity-input" id="qty-@item.Id" value="@item.Qty" readonly>
                                        <button class="btn btn-outline-secondary btn-sm btn-increase" type="button" data-id="@item.Id">+</button>
                                    </div>
                                </div>

                                <div class="col-md-2 text-end">
                                    <p class="fw-bold">$@totalPrice.ToString("0.00")</p>
                                    <form asp-action="Delete" asp-controller="Cart" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure to delete this item?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>

                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <p>Your cart is empty.</p>
                    }

                </div>
            </div>

            <div class="text-start mb-4">
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card cart-summary">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal</span>
                        <span>$@subtotal.ToString("0.00")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Shipping</span>
                        <span>BDT 10.00</span>
                    </div>
                  
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong>BDT @((subtotal + 10).ToString("0.00"))</strong>
                    </div>
                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary w-100">Proceed to Checkout</a>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Apply Promo Code</h5>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter promo code">
                        <button class="btn btn-outline-secondary" type="button">Apply</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.btn-increase').forEach(btn => {
        btn.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            updateQty(id, 1);
        });
    });

    document.querySelectorAll('.btn-decrease').forEach(btn => {
        btn.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            updateQty(id, -1);
        });
    });

    function updateQty(id, delta) {
        fetch(`/Cart/UpdateQuantity`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify({ id: parseInt(id), change: delta })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                document.getElementById(`qty-${id}`).value = data.newQty;
                location.reload(); // or update price without full reload
            }
        });
    }
</script>
