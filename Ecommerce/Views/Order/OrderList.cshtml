@model List<Ecommerce.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2 class="mb-4">My Orders</h2>

<table class="table table-striped table-hover align-middle shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th scope="col">Order ID</th>
            <th scope="col">Customer</th>
            <th scope="col">Phone</th>
            <th scope="col">Date</th>
            <th scope="col">Status</th>
            <th scope="col" class="text-end">Total</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Address?.CustomerName</td>
                <td>@order.Address?.Phone</td>
                <td>@order.CreatedAt.ToString("dd MMM yyyy")</td>
                <td>
                    @* Use Bootstrap badges for status *@
                    @if (order.OrderStatus == "Pending")
                    {
                        <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                    }
                    else if (order.OrderStatus == "Completed")
                    {
                        <span class="badge bg-success">@order.OrderStatus</span>
                    }
                    else if (order.OrderStatus == "Cancelled")
                    {
                        <span class="badge bg-danger">@order.OrderStatus</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@order.OrderStatus</span>
                    }
                </td>
                <td class="text-end">৳@order.TotalAmount.ToString("N2")</td>
                <td class="text-center">
                    <a href="@Url.Action("OrderSummary", "Order", new { orderId = order.Id })" class="btn btn-outline-secondary btn-sm px-3">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4" role="alert">
        You have no orders yet.
    </div>
}
