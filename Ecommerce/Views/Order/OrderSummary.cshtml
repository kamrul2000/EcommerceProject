@model Ecommerce.ViewComponents.OrderSummaryViewModel

@{
    ViewData["Title"] = "Order Summary";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-dark text-white text-center py-4 rounded-top-4">
            <h2 class="mb-0">Order Summary</h2>
        </div>

        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>Order ID:</strong> #@Model.Order.Id</p>
                    <p><strong>Date:</strong> @Model.Order.CreatedAt.ToString("dd MMM yyyy")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>
                        <strong>Status:</strong>
                        @if (Model.Order.OrderStatus == "Pending")
                        {
                            <span class="badge bg-warning text-dark">@Model.Order.OrderStatus</span>
                        }
                        else if (Model.Order.OrderStatus == "Completed")
                        {
                            <span class="badge bg-success">@Model.Order.OrderStatus</span>
                        }
                        else if (Model.Order.OrderStatus == "Cancelled")
                        {
                            <span class="badge bg-danger">@Model.Order.OrderStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Order.OrderStatus</span>
                        }
                    </p>
                    <p><strong>Total:</strong> <span class="fs-5 fw-semibold text-success">৳@Model.Order.TotalAmount.ToString("N2")</span></p>
                </div>
            </div>

            <hr />

            <h4 class="mb-3">Shipping Address</h4>
            <div class="mb-4">
                <p class="mb-0">@Model.Address.AddressLine</p>
                <p class="mb-0">@Model.Address.City</p>
                <p class="mb-0">@Model.Address.State</p>
            </div>

            <hr />

            <h4 class="mb-3">Items in Your Order</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="text-start">@item.Product.Name</td>
                                <td>৳@item.UnitPrice.ToString("N2")</td>
                                <td>@item.Quantity</td>
                                <td>৳@(item.UnitPrice* item.Quantity).ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-end mt-4">
                <a href="/" class="btn btn-outline-secondary px-4">
                    Continue Shopping  <i class="bi bi-arrow-right-circle me-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>
